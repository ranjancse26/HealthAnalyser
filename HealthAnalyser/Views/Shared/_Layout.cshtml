<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name = "viewport" content = "initial-scale = 1, user-scalable = no">
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />        
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        
        <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">  
        
        <script src="~/Scripts/responsive-tables.js"></script>
        <script src="~/Scripts/Chart.js"></script>   
        
        <link href="~/Content/responsive-tables.css" rel="stylesheet" />   
        <link rel="stylesheet" href="~/Content/ResponsiveTables/globals.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/typography.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/grid.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/ui.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/forms.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/orbit.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/reveal.css">
        <link rel="stylesheet" href="~/Content/ResponsiveTables/mobile.css">  

         <!--[if lt IE 9]>
        <link rel="stylesheet" href="~/Content/ResponsiveTables/ie.css">
        <![endif]-->
        
        <!-- IE Fix for HTML5 Tags -->
        <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
