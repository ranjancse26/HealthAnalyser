        <style>
        * {
          margin: 0;
        }
        html, body {
          height: 100%;
        }
        .page-wrap {
          min-height: 100%;
          /* equal to footer height */
          margin-bottom: -70px; 
        }
        .page-wrap:after {
          content: "";
          display: block;
        }
        .site-footer, .page-wrap:after {
          /* .push must be the same height as footer */
          height: 40px; 
        }
        .site-footer {
          background-color: cadetblue;
        }

       </style>
        
      </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Images/Logo.png" />
                </div>
                <div class="float-right">
          @*          <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
         *@           <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Sleep", "SleepData", "Home")</li>
                            <li>@Html.ActionLink("Exercise", "ExerciseData", "Home")</li>
                            <li>@Html.ActionLink("Blood Pressure", "BloodPressureData", "Home")</li>
                            <li>@Html.ActionLink("Weight", "WeightData", "Home")</li>
                            <li>@Html.ActionLink("Weight Goal", "WeightGoalData", "Home")</li>
                            <li>@Html.ActionLink("Mood", "MoodData", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
